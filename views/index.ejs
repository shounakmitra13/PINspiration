<% include ./partials/header.ejs %>
<div class="relative w-full h-screen bg-center bg-cover bg-[#FEE2E2] flex items-center justify-center p-4">
    <!-- Content container with white background -->
    <div class="relative w-full max-w-lg bg-white px-6 py-10 rounded-md shadow-lg">
        <!-- Pinterest icon -->
        <div class="flex justify-center mb-4">
            <img src="/images/pinterest-icon.png" alt="Pinterest Icon" class="w-24 h-16">
        </div>
        
        <!-- Heading -->
        <h1 class="text-2xl sm:text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-tight mb-6">
            Welcome to PINspiration !!
        </h1>
        
        <!-- Form -->
        <form action="/login" method="post" class="space-y-4">
            <input class="border-2 border-zinc-300 rounded-full block w-full px-3 py-2" type="text" name="username" placeholder="Username">
            <input class="border-2 border-zinc-300 rounded-full block w-full px-3 py-2" type="password" name="password" placeholder="Password">
            <a class="text-sm font-semibold text-zinc-500 block text-center mt-2" href="#">Forgot Password?</a>
            <input class="border-2 border-zinc-300 bg-red-600 text-white rounded-full block w-full px-3 py-2 cursor-pointer hover:bg-red-700" type="submit" name="submit" value="Login">
            <p class="text-xs font-semibold text-zinc-700 mt-4 text-center">
                By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy.
            </p>
            <a class="text-sm font-semibold text-zinc-700 block text-center mt-4" href="/register">Don't have an account?</a>
        </form>
    </div>
</div>
<% include ./partials/footer.ejs %>
