<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-[#FEE2E2] flex items-center justify-center">
    <div class="w-full max-w-md h-auto bg-white px-8 py-12 rounded-md shadow-lg">
        <!-- Pinterest icon -->
        <div class="flex justify-center mb-4">
            <img src="/images/pinterest-icon.png" alt="Pinterest Icon" class="w-24 h-16">
        </div>

        <!-- Heading -->
        <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-tight mb-6">Create New Account</h1>
        
        <!-- Form -->
        <form action="/register"  method="post" class="space-y-4">
            <input class="border-2 border-zinc-300 rounded-full block w-full px-4 py-3" type="text" name="username" placeholder="Username">
            <input class="border-2 border-zinc-300 rounded-full block w-full px-4 py-3" type="text" name="fullName" placeholder="Full Name">
            <input class="border-2 border-zinc-300 rounded-full block w-full px-4 py-3" type="email" name="email" placeholder="Email">
            <input class="border-2 border-zinc-300 rounded-full block w-full px-4 py-3" type="number" name="contact" placeholder="Contact">         
           <input class="border-2 border-zinc-300 rounded-full block w-full px-4 py-3" type="password" name="password" placeholder="Password">
            <input class="border-2 border-zinc-300 bg-red-600 text-white rounded-full block w-full px-4 py-3 cursor-pointer hover:bg-red-700" type="submit" value="Create New Account">
        </form>
            
        <p class="text-xs font-semibold text-zinc-700 mt-6 text-center">
            By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy.
        </p>
        
        <a class="inline-block mt-4 text-sm font-semibold text-zinc-700 text-center" href="/">Login Existing Account</a>
    </div>
</div>
<% include ./partials/footer.ejs %>
